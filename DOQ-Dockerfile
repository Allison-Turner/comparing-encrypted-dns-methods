FROM ubuntu:latest

RUN /bin/bash -c 'apt-get --yes update; \
apt-get --yes install git; \
apt-get --yes install golang; \
git clone https://github.com/ns1labs/doq-proxy.git'

WORKDIR "/doq-proxy/"

RUN /bin/bash -c 'go mod download github.com/go-kit/kit; \
go get github.com/ns1/doq-proxy/cmd/proxy; \
go build ./cmd/proxy; \
go build ./cmd/client'
